<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- 背景渐变层 -->
    <path
        android:pathData="M54,54m-40,0a40,40 0,1 1,80 0a40,40 0,1 1,-80 0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="40"
                android:type="radial">
                <item android:color="#FF6366F1" android:offset="0" />
                <item android:color="#FF0F111A" android:offset="1" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 六边形液态核心 -->
    <path
        android:pathData="M54,28 L76.5,41 L76.5,67 L54,80 L31.5,67 L31.5,41 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="31.5"
                android:startY="28"
                android:endX="76.5"
                android:endY="80"
                android:type="linear">
                <item android:color="#FF4F46E5" android:offset="0" />
                <item android:color="#FF9333EA" android:offset="0.5" />
                <item android:color="#FFDB2777" android:offset="1" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 中心发光十字 (AI 闪烁感) -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M54,44 L54,64 M44,54 L64,54"
        android:strokeAlpha="0.8"
        android:strokeColor="#FFFFFF"
        android:strokeLineCap="round"
        android:strokeWidth="3" />
</vector>

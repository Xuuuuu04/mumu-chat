<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- 1. 底部氛围光晕 (Glow) -->
    <path
        android:pathData="M54,54m-48,0a48,48 0,1 1,96 0a48,48 0,1 1,-96 0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="48"
                android:type="radial">
                <item android:color="#406366F1" android:offset="0" />
                <item android:color="#006366F1" android:offset="1" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 2. 主体：流体六边形 (Liquid Hexagon) -->
    <path
        android:pathData="M54,24 L80,38 L80,70 L54,84 L28,70 L28,38 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="28"
                android:startY="24"
                android:endX="80"
                android:endY="84"
                android:type="linear">
                <item android:color="#FF4F46E5" android:offset="0" />
                <item android:color="#FFEC4899" android:offset="1" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 3. 核心：智慧之源 (Glowing Core) - 取代之前的十字星 -->
    <path
        android:pathData="M54,54m-12,0a12,12 0,1 1,24 0a12,12 0,1 1,-24 0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="12"
                android:type="radial">
                <item android:color="#E0FFFFFF" android:offset="0" />
                <item android:color="#00FFFFFF" android:offset="1" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 4. 玻璃质感：顶部弧形高光 (Curved Highlight) -->
    <path
        android:pathData="M38,42 Q54,28 70,42"
        android:strokeColor="#FFFFFF"
        android:strokeWidth="2"
        android:strokeAlpha="0.3"
        android:strokeLineCap="round" />

    <!-- 5. 玻璃质感：核心侧亮边 (Side Glint) -->
    <path
        android:pathData="M48,48 L52,52"
        android:strokeColor="#FFFFFF"
        android:strokeWidth="1.5"
        android:strokeAlpha="0.5"
        android:strokeLineCap="round" />
</vector>